<resources>

    <!-- App Theme -->
    <style name="Theme.WildWatch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/orangeTheme</item>
        <item name="android:windowBackground">@color/appBackground</item>
    </style>

    <!-- Buttons Style -->
    <style name="StyledButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item> <!-- optional if you added fonts -->
    </style>

</resources>
