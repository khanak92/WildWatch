<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E7"
    android:padding="16dp">

    <!-- Top Title -->
    <TextView
        android:id="@+id/graphTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Wildlife Sightings Over the Past Week"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Y-Axis Label -->
    <TextView
        android:id="@+id/yAxisLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-90"
        android:text="Sightings"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/graphContainer"
        app:layout_constraintEnd_toStartOf="@+id/graphContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/graphContainer" />

    <!-- Graph Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/graphContainer"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="16dp"
        android:background="@drawable/graph_background"
        app:layout_constraintBottom_toTopOf="@id/graphDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/graphTitle">

        <!-- Example Bar Graph -->
        <View
            android:id="@+id/bar1"
            android:layout_width="32dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:background="#FF8E3A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/bar2"
            android:layout_width="32dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:background="#FF8E3A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bar1" />

        <View
            android:id="@+id/bar3"
            android:layout_width="32dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:background="#FF8E3A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bar2" />

        <View
            android:id="@+id/bar4"
            android:layout_width="32dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:background="#FF8E3A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bar3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- X-Axis Labels -->

    <!-- Bottom Description -->

    <TextView
        android:id="@+id/xAxisLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:textColor="#000000"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="440dp" />

    <TextView
        android:id="@+id/xAxisLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tue"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/xAxisLabel3"
        app:layout_constraintStart_toEndOf="@+id/xAxisLabel1"
        app:layout_constraintTop_toTopOf="@+id/xAxisLabel3" />

    <TextView
        android:id="@+id/xAxisLabel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Wed"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/graphContainer"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="192dp" />


    <TextView
        android:id="@+id/xAxisLabel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Thur"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/xAxisLabel3"
        app:layout_constraintTop_toBottomOf="@+id/graphContainer"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/graphDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="This graph represents the number of wildlife sightings reported each day in the last week."
        android:textColor="#5A5A5A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xAxisLabel1" />
</androidx.constraintlayout.widget.ConstraintLayout>
