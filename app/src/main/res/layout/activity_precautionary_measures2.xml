<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".precautionaryMeasures2">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/switchButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Videos Button -->
        <Button
            android:id="@+id/btnVideos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#FF8E3A"
            android:padding="8dp"
            android:text="Videos"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!-- Text Button -->
        <Button
            android:id="@+id/btnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF8E3A"
            android:padding="8dp"
            android:text="Text"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat> <!-- Proper closing tag -->



    <!-- Scrollable List of Precautionary Measures -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/switchButtonsContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Expandable Precaution 1 -->
            <TextView
                android:id="@+id/precaution1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”¸ Keep a Safe Distance (Tap to Expand)"
                android:textSize="16sp"
                android:background="#FF8E3A"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/precaution1Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Always maintain a safe distance from wildlife and never try to feed or touch them."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:visibility="gone"/>

            <!-- Expandable Precaution 2 -->
            <TextView
                android:id="@+id/precaution2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”¸ Avoid Sudden Movements (Tap to Expand)"
                android:textSize="16sp"
                android:background="#FF8E3A"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/precaution2Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Move calmly and avoid running, as it may trigger a chase instinct in animals."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>