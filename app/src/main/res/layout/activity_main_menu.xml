<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".MainMenu">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header or Title -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:textSize="24sp"
            android:textColor="#FF8E3A"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Precautionary Measures Button -->
        <Button
            android:id="@+id/btnPrecautionaryMeasures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Precautionary Measures"
            android:backgroundTint="#FF8E3A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/headerText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Recently Detected Button -->
        <Button
            android:id="@+id/btnRecentlyDetected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Recently Detected"
            android:backgroundTint="#FF8E3A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnPrecautionaryMeasures"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Hardware Management Button -->
        <Button
            android:id="@+id/btnHardwareManagement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hardware Management"
            android:backgroundTint="#FF8E3A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnRecentlyDetected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Trend Analysis Button -->
        <Button
            android:id="@+id/btnTrendAnalysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Trend Analysis"
            android:backgroundTint="#FF8E3A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnHardwareManagement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- User Profile Button -->
        <Button
            android:id="@+id/btnUserProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:backgroundTint="#FF8E3A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnTrendAnalysis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Live Stream Button -->
        <Button
            android:id="@+id/btnLiveStream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Live Stream"
            android:backgroundTint="#FF8E3A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnUserProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Notification Settings Button -->
        <Button
            android:id="@+id/btnNotificationSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notification Settings"
            android:backgroundTint="#FF8E3A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnLiveStream"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contact Wildlife Department Button -->
        <Button
            android:id="@+id/btnContactWildlifeDepartment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact Wildlife Department"
            android:backgroundTint="#FF8E3A"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/btnNotificationSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
